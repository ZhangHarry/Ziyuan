			</dependency>
			<dependency>
				<groupId>tzuyu-project</groupId>
				<artifactId>icsetlv</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>tzuyu-project</groupId>
				<artifactId>mutation</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>tzuyu-project</groupId>
				<artifactId>assertion</artifactId>
				<version>${project.version}</version>
			</dependency>
			<!-- specific for test -->
			<dependency>
				<groupId>tzuyu-project</groupId>
				<artifactId>codecoverage.jacoco</artifactId>
				<type>test-jar</type>
				<scope>test</scope>
				<version>${project.version}</version>
