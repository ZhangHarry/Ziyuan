<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.jdt.core.IJavaElement"
            class="learntest.plugin.commons.adapter.JavaElementRuntimeInfoAdapterFactory">
         <adapter
               type="learntest.plugin.commons.data.IModelRuntimeInfo">
         </adapter>
      </factory>
   </extension>
	<extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="learntest.plugin.testers.GentestTextSelectionTester"
             id="learntest.plugin.tester.gentest.selection.text"
             namespace="learntest.plugin.tester"
             properties="isTestableSelectedText"
             type="java.lang.Object">
       </propertyTester>
       <propertyTester
             class="learntest.plugin.testers.ShowCoverageSelectionTester"
             id="learntest.plugin.tester.selection.showCoverage"
             namespace="learntest.plugin.tester"
             properties="enableShowCoverageMenuItem"
             type="java.lang.Object">
       </propertyTester>
    </extension>
   <extension
         point="org.eclipse.ui.commands" id="learntestCommands">
      <command
            defaultHandler="learntest.plugin.handler.GenerateTestHandler"
            id="learntest.command.generatetest"
            name="Generate Test">
      </command>
      <command
            defaultHandler="learntest.plugin.handler.gentest.JavaGentestHandler"
            id="learntest.plugin.commands.javaGentest"
            name="Generate Testcases">
         <commandParameter
               id="learntest.approach"
               name="L2T"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="learntest.plugin.commands.reportview.groupBy"
            name="GroupByCommand">
         <commandParameter
               id="report.groupby.type"
               name="type"
               optional="false">
         </commandParameter>
      </command>
      <command
            id="learntest.plugin.commands.reportView.updateAnnotationByTestcases"
            name="Update Coverage Highlight">
      </command>
     
   </extension>
   <extension
         point="org.eclipse.ui.menus" id="learntestMenu">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Test Generation">
            <command
                  commandId="learntest.command.generatetest"
                  icon="icon/icon-test-management.png"
                  label="Generate Test"
                  style="push">
            </command>
         </menu>
         
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?before=additions">
         <separator
               name="learntest.separator.generateTestcases"
               visible="true">
         </separator>
         <menu
               id="learntest.plugin.popup.gentest"
               label="Generate Testcases">
           <command
                 commandId="learntest.plugin.commands.javaGentest"
                 label="as L2T">
            <parameter
                  name="learntest.approach"
                  value="L2T">
            </parameter>
             <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <adapt
                           type="org.eclipse.jdt.core.IJavaElement">
                     </adapt>
                     <and>
                        <with
                              variable="selection">
                           <test
                                 forcePluginActivation="true"
                                 property="learntest.plugin.tester.isTestableSelectedText">
                           </test>
                        </with>
                     </and>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
         
         <command
                 commandId="learntest.plugin.commands.javaGentest"
                 label="as RandomTest">
            <parameter
                  name="learntest.approach"
                  value="RANDOOP">
            </parameter>
             <visibleWhen
                  checkEnabled="true">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <or>
                     <adapt
                           type="org.eclipse.jdt.core.IJavaElement">
                     </adapt>
                     <and>
                        <with
                              variable="selection">
                           <test
                                 forcePluginActivation="true"
                                 property="learntest.plugin.tester.isTestableSelectedText">
                           </test>
                        </with>
                     </and>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:learntest.plugin.view.reportView">
         <command
               commandId="learntest.plugin.commands.reportview.groupBy"
               icon="icon/TODO-GROUPBY.png"
               label="Group by Projects"
               style="radio">
            <parameter
                  name="report.groupby.type"
                  value="PROJECT">
            </parameter>
         </command>
         <command
               commandId="learntest.plugin.commands.reportview.groupBy"
               icon="icon/TODO-GROUPBY.png"
               label="Group by Methods"
               style="radio">
            <parameter
                  name="report.groupby.type"
                  value="METHOD">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:learntest.plugin.view.reportView?after=additions">
         <separator
               name="learntest.separator.gentestReport"
               visible="true">
         </separator>
         <command
               commandId="learntest.plugin.commands.reportView.updateAnnotationByTestcases"
               label="Show Coverage By Testcases"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate>
                  <and>
                     <with
                           variable="selection">
                        <test
                              args="coverageType"
                              forcePluginActivation="true"
                              property="learntest.plugin.tester.enableShowCoverageMenuItem"
                              value="BY_SELECTED_TESTCASES">
                        </test>
                     </with>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
         <command
               commandId="learntest.plugin.commands.reportView.updateAnnotationByTestcases"
               label="Show Full Coverage"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <iterate>
                  <and>
                     <with
                           variable="selection">
                        <test
                              args="coverageType"
                              forcePluginActivation="true"
                              property="learntest.plugin.tester.enableShowCoverageMenuItem"
                              value="FULL">
                        </test>
                     </with>
                  </and>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="learntestPreferences"
         point="org.eclipse.ui.preferencePages">
      <page
            class="learntest.plugin.preferences.LearnTestPreference"
            id="learntest.preference"
            name="Test Generation">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.eclipse.jdt.ui.java"
            class="learntest.plugin.view.report.ReportView"
            id="learntest.plugin.view.reportView"
            name="Learntest Coverage">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="learntest.plugin.specification.coverage"
            colorPreferenceKey="coverage_color"
            colorPreferenceValue="184,236,169"
            contributesToHeader="false"
            highlightPreferenceKey="coverage_highlight"
            highlightPreferenceValue="true"
            includeOnPreferencePage="true"
            isGoToNextNavigationTarget="false"
            isGoToNextNavigationTargetKey="coverage_isGoToNextNavigationTarget"
            isGoToPreviousNavigationTarget="false"
            isGoToPreviousNavigationTargetKey="coverage_isGoToPrevNavigationTarget"
            label="Coverage"
            overviewRulerPreferenceKey="coverage_overviewRuler"
            overviewRulerPreferenceValue="false"
            presentationLayer="0"
            showInNextPrevDropdownToolbarAction="false"
            showInNextPrevDropdownToolbarActionKey="coverage_showInNextPrevDropdownToolbarAction"
            textPreferenceKey="coverage_text"
            textPreferenceValue="false"
            textStylePreferenceKey="coverage_textStylePreference"
            textStylePreferenceValue="NONE"
            verticalRulerPreferenceKey="coverage_verticalRuler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>

</plugin>
