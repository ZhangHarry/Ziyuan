<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
          id="tzuyu"
          point="org.eclipse.ui.menus">
       <menuContribution
             allPopups="false"
             locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
          <menu
                id="tzuyu"
                label="Tzuyu">
             <visibleWhen>
                <with variable="selection">
                   <test property="tzuyu.plugin.tester.isSuitableForTest"/>
                </with>
             </visibleWhen>
             <command
                   commandId="tzuyu.menu.command.generateTestcases"
                   id="tzuyu.group.generateTestcases"
                   label="%menu.generateTestCase"
                   style="push">
             </command>
             <command
                   commandId="tzuyu.menu.command.openDialog"
                   label="%menu.openDialog"
                   style="push">
             </command>
             
          </menu>
       </menuContribution>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
       <command
             defaultHandler="tzuyu.plugin.command.GenTestHandler"
             id="tzuyu.menu.command.generateTestcases"
             name="Generate test cases">
       </command>
       <command
             id="tzuyu.menu.command.openDialog"
             name="Open Dialog">
       </command>
    </extension>
    
    <extension
          point="org.eclipse.core.expressions.propertyTesters">
       <propertyTester
             class="tzuyu.plugin.propertytester.SelectionFilter"
             id="tzuyu.plugin.tester"
             namespace="tzuyu.plugin.tester"
             properties="isSuitableForTest"
             type="org.eclipse.jface.viewers.ISelection">
       </propertyTester>
    </extension>
</plugin>
